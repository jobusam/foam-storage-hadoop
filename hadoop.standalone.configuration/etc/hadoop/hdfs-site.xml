<!-- Put site-specific property overrides in this file. -->

<!--The configuration is considered to be used for an Hadoop Cluster on a single node in pseudo-distributed mode-->
<configuration>
	<property>
		<name>dfs.replication</name>
		<value>1</value>
	</property>

	<!-- Following property defines the persistence of the local datanode! -->
	<property>
		<name>dfs.datanode.data.dir</name>
		<value>/home/johannes/Studium/Masterthesis/work/localinstance/hadoop-tmp/datanode</value>
	</property>

	<!-- Following property defines the persistence of the namenode! -->
	<property>
		<name>dfs.namenode.name.dir</name>
		<value>/home/johannes/Studium/Masterthesis/work/localinstance/hadoop-tmp/namenode</value>
	</property>
</configuration>
